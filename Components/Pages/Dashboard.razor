@page "/dashboard"
@inject KarimaCollection.Data.AppDbContext Db
@rendermode InteractiveServer

<h2 class="text-center mt-4">📊 Admin Dashboard</h2>

<div class="text-center mb-3">
    <a href="/" class="btn btn-primary">🏠 Home</a>
</div>
<div class="text-center mb-4">
    <a href="/productManager" class="btn btn-dark">🛍 Manage Products</a>
</div>


<div class="dashboard-container">
    <div class="card">
        <h4>Total Orders</h4>
        <p>@orders.Count()</p>
    </div>
    <div class="card">
        <h4>Total Messages</h4>
        <p>@messages.Count()</p>
    </div>
</div>

<h3 class="mt-4">🛍️ Recent Orders</h3>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Email</th>
                <th>Amount (NYN)</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in orders.Take(5))
            {
                <tr>
                    <td>@o.CustomerName</td>
                    <td>@o.CustomerEmail</td>
                    <td>@o.TotalAmount.ToString("N2")</td>
                    <td>@o.OrderDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h3 class="mt-4">💬 Recent Messages</h3>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in messages.Take(5))
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.Email</td>
                    <td>@m.Message</td>
                    <td>@m.SubmittedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f4f5f7;
        margin: 0;
        color: #333;
    }

    h2, h3 {
        text-align: center;
        margin-top: 1.5rem;
        font-weight: 600;
        color: #111;
        animation: fadeInDown 0.8s ease forwards;
    }

    .dashboard-container {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin: 2rem auto;
        flex-wrap: wrap;
    }

    .card {
        background: #fff;
        border-radius: 12px;
        padding: 2rem 1.5rem;
        width: 200px;
        text-align: center;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
        }

        .card h4 {
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #555;
        }

        .card p {
            font-size: 1.8rem;
            font-weight: 600;
            color: #111;
            margin: 0;
        }

    .table {
        width: 100%;
        margin: 1rem auto;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        background: #fff;
    }

        .table thead {
            background: #111;
            color: #fff;
        }

        .table th, .table td {
            padding: 0.75rem 1rem;
            text-align: left;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background: #f9f9f9;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

        .table-bordered th, .table-bordered td {
            border: 1px solid #ddd;
        }

    .table-responsive {
        overflow-x: auto;
        margin-bottom: 2rem;
    }

    @@keyframes fadeInDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@media (max-width: 768px) {
        .dashboard-container

    {
        flex-direction: column;
        align-items: center;
    }

    .card {
        width: 90%;
    }

    }
</style>

@code {
    private List<KarimaCollection.Models.Order> orders = new();
    private List<KarimaCollection.Models.ContactMessage> messages = new();

    protected override async Task OnInitializedAsync()
    {
        orders = Db.Orders.ToList();
        messages = Db.ContactMessages.ToList();
    }
}
